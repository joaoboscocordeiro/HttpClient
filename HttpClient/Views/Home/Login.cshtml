@using HttpClientWeb.Dtos.Login
@model UsuarioLoginDto

@{
    Layout = "_LayoutDeslogada";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-dark" role="alert">
        @TempData["MensagemErro"]
    </div>
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-dark" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

<div class="text-danger" asp-validation-summary="All"></div>

<h1>Sistema de Usuários</h1>

<div class="container mt-5">
    <form asp-action="Login" asp-controller="Home" method="post">

        <div class="mb-3">
            <label class="form-label">Email:</label>
            <input type="email" class="form-control" asp-for="Email" />
        </div>
        <div class="mb-3">
            <label class="form-label">Senha:</label>
            <input type="password" class="form-control" asp-for="Senha" />
        </div>

        <button type="submit" class="btn btn-success w-100 mb-2">Entrar</button>
        <a asp-action="Registrar" asp-controller="Home" class="btn btn-secondary w-100">Cadastrar-se</a>

    </form>
</div>